<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="50dp"
        android:text="Results"
        android:textColor="#0E0E0E"
        android:textSize="52sp"
        android:textStyle="bold|italic" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/answersTextView"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#0C0C0C"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circular_button"
            android:backgroundTint="#0E45A8"
            android:gravity="center"
            android:onClick="onTryAgainButtonClick"
            android:padding="16dp"
            android:text="Try Again"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/reviewButton"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:background="@drawable/circular_button"
            android:backgroundTint="#0E45A7"
            android:gravity="center"
            android:onClick="onReviewButtonClick"
            android:padding="16dp"
            android:text="Review"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#CD2222"
        android:onClick="onExitButtonClick"
        android:padding="16dp"
        android:text="Exit"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
